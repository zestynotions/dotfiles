#===================================================================================   
# Information call to show whn starting a new term and with a splash of lolcat color
#===================================================================================
uname_info_figlet() {
    uname -n | figlet -f slant
    uname -s -m -r
	date +"%Y-%B-%d - %R"
}


#==============================================
# Function to compile and then run a C program
#==============================================
clear_compile(){
    echo ""
    echo "Compiling $1 ...please wait..." |lolcat
    echo "================================================="
    make $1 
    echo ""
    echo "Running Program $1 ..." |lolcat
    echo "================================================="
    ./$1
}


# =================================
# Run figlet with larry3d effect
# =================================
zns_header(){
    clear
    echo ""
    figlet -f larry3d -w 160 $1 |lolcat
    echo ""
}

# =================================
# Run countdown effect
# =================================
cdown(){
    clear
    while [[ $1 > 0 ]]
      do 
        echo "$1" | figlet -f larry3d -w 60 | lolcat && sleep 1
        clear
    done
}
